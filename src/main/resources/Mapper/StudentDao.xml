<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="springbootio.dao.StudentDao">

    <select id="queryStudentByName" parameterType="String" resultType="springbootio.entity.persistence.StudentDetail">

        SELECT * FROM student_detail WHERE username = #{username}

    </select>

    <select id="queryStudentByNumber" parameterType="int" resultType="springbootio.entity.persistence.StudentDetail">

        SELECT * FROM student_detail WHERE student_number = #{studentNumber}

    </select>

    <insert id="addStudent" parameterType="springbootio.entity.persistence.StudentDetail">

        INSERT INTO student_detail
        (student_number,
        username,
        sex,
        university,
        phone_number)
        VALUES
        (#{studentNumber},
        #{username},
        #{sex},
        #{university},
        #{phoneNumber})

    </insert>

    <update id="updateStudent" parameterType="springbootio.entity.persistence.StudentDetail">

        UPDATE student_detail
        SET
        username = #{username},
        sex=#{sex},
        university=#{university},
        phone_number=#{phoneNumber}
        WHERE student_number = #{studentNumber}

    </update>

    <!-- 添加学生注册信息-->
    <insert id="addStudentInfo" useGeneratedKeys="true" keyProperty="id" parameterType="springbootio.entity.persistence.StudentInfo">

        INSERT INTO student_info
        (username,
        password,
        email)
        VALUES
        (#{username},
        #{password},
        #{email})

    </insert>

    <!--查询学生注册信息-->
    <select id="selectStudentInfoByName" parameterType="String" resultType="springbootio.entity.persistence.StudentInfo">

        SELECT * FROM student_info WHERE username=#{username}

    </select>

    <select id="selectStudentInfoByEmail" parameterType="String" resultType="springbootio.entity.persistence.StudentInfo">

        SELECT * FROM student_info WHERE email = #{email}

    </select>


    <select id="selectStudentInfoById" parameterType="int" resultType="springbootio.entity.persistence.StudentInfo">

        SELECT * FROM student_info WHERE id = #{id}

    </select>

    <update id="updatePassword">

        UPDATE student_info
        SET password = #{password}
        WHERE username = #{username}

    </update>

</mapper>



