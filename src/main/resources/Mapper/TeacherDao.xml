<?xml version="1.0" encoding="UTF-8"?>
        <!DOCTYPE mapper
                PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="springbootio.dao.TeacherDao">

    <select id="queryTeacherByName" parameterType="String" resultType="springbootio.entity.persistence.TeacherDetail">

        SELECT * FROM teacher_detail WHERE username=#{username}

    </select>

    <select id="queryTeacherByNumber" parameterType="int" resultType="springbootio.entity.persistence.TeacherDetail">

        SELECT * FROM teacher_detail WHERE teacher_number=#{teacherNumber}

    </select>



<insert id="addTeacher" parameterType="springbootio.entity.persistence.TeacherDetail">

        INSERT INTO teacher_detail
        (teacher_number,
        username,
        sex,
        university,
        phonenumber)
        VALUES
        (#{teacherNumber},
        #{username},
        #{sex},
        #{university},
        #{phoneNumber})

</insert>


<update id="updateTeacher" parameterType="springbootio.entity.persistence.TeacherDetail">

         UPDATE teacher_detail
         SET
         username=#{username},
         sex=#{sex},
         university=#{university},
         phonenumber=#{phoneNumber}
         WHERE teacher_number=#{teacherNumber}

</update>

    <!--添加老师注册信息-->
    <insert id="addTeacherInfo" useGeneratedKeys="true" keyProperty="id" parameterType="springbootio.entity.persistence.TeacherInfo">

        INSERT INTO teacher_info
        (username,
        password,
        email)
        VALUES
        (#{username},
        #{password},
        #{email})

    </insert>

    <select id="selectTeacherInfoByName" parameterType="String" resultType="springbootio.entity.persistence.TeacherInfo">

        SELECT * FROM teacher_info WHERE username = #{username}

    </select>

    <select id="selectTeacherInfoById" parameterType="int" resultType="springbootio.entity.persistence.TeacherInfo">

        SELECT * FROM teacher_info WHERE id=#{id}

    </select>

    <select id="selectTeacherInfoByEmail" parameterType="String" resultType="springbootio.entity.persistence.TeacherInfo">

        SELECT * from teacher_info WHERE email=#{email}

    </select>

</mapper>